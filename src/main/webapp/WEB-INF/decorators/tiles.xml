<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Template -->
	<definition name="default" template="/WEB-INF/decorators/Layout.jsp">
		<put-attribute name="header" value="/WEB-INF/decorators/Header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/decorators/Menu.jsp" />
		<put-attribute name="body" value="" />
	</definition>


	<!-- Pages -->
	<definition name="*" extends="default">
		<put-attribute name="body" value="/WEB-INF/view/{1}.jsp" />
	</definition>
	<definition name="products/orders/*" extends="default">
		<put-attribute name="body" value="/WEB-INF/view/products/orders/{1}.jsp" />
	</definition>
	<definition name="/products/*" extends="default">
		<put-attribute name="body" value="/WEB-INF/view/products/{1}.jsp" />
	</definition>

</tiles-definitions>
